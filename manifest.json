{
  "manifest_version": 2,
  "name": "Remove Hyperlink hrefs",
  "version": "0.2",
  "description": "Allow you to remove hyperlink href attribute",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "homepage_url": "https://github.com/draav/remove-hyperlink-hrefs",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Remove Links",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}